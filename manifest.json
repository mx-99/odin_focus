{
  "manifest_version": 2,
  "name": "Odin Focus",
  "version": "1.0",
  "description": "It removes distractions from learning resources linked in The Odin Project curriculum",
  "homepage_url": "https://github.com/mx-99/odin_focus",
  "icons": {
    "48": "icons/focus-48.png"
  },
  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_title": "Odin Focus",
    "default_popup": "popup/choose_beast.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.developer.mozilla.org/*",
        "*://*.youtube.com/*",
        "*://*.sitepoint.com/*"
      ],
      "js": [
        "app.js"
      ],
          "css": ["hide.css"],
    "run_at": "document_start"
    }
  ]
}
